pipeline {
    agent any
    stages {
        stage('Build Docker Image') {
            steps {
                sh 'docker build -t student-app .'
            }
        }
        stage('Run Docker Container') {
            steps {
                sh '''
                    docker rm -f student-app || true
                    docker run -d -p 5000:5000 --name student-app student-app
                '''
            }
        }
    }
}

